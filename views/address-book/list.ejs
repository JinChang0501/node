<%- include('../parts/html-head') %> <%- include('../parts/navbar') %>
    <div class="container">
      <div class="row">
        <!-- 頁碼 -->
        <div class="col-6">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <% for (let i=page-5; i<=page+5; i++){if(i>= 1 && i<=totalPages){%>
                  <li class="page-item <%=i===page ? 'active' :'' %>">

                    <a class="page-link" href="?page=<%= i %>">
                      <%= i %>
                    </a>
                  </li>
                  <%}}%>
            </ul>
          </nav>
        </div>
        <!-- Search -->

        <div class="col-6">
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="keyword">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
        <div class="col-12">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">編號</th>
                <th scope="col">姓名</th>
                <th scope="col">信箱</th>
                <th scope="col">電話</th>
                <th scope="col">生日</th>
                <th scope="col">地址</th>
              </tr>
            </thead>
            <tbody>
              <% for (let r of rows){ %>
                <tr>
                  <td>
                    <%= r['sid'] %>
                  </td>
                  <td>
                    <%= r.name %>
                  </td>
                  <td>
                    <%= r.email %>
                  </td>
                  <td>
                    <%= r.mobile %>
                  </td>
                  <td>
                    <%= r.birthday %>
                  </td>
                  <td>
                    <%= r.address %>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%- include('../parts/scripts') %> <%- include('../parts/html-foot') %>